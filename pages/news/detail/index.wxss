/* pages/news/detail/index.wxss */
.top-head{
  position: relative;
}
.head-img{
  width: 100%;
  height: 460rpx;
}
.music-start-icon{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 102rpx;
  height: 102rpx;
}
.content-container{
  padding: 30rpx;
}
.author-info{
  display: flex;
  align-items: center;
  font-size: 22rpx;
}
.avatar{
  width: 74rpx;
  height: 74rpx;
  margin: 0 20rpx 0 0;
}
.author-name{
  margin: 0 0 14rpx;
  color: #333;
  font-size: 26rpx;
}
.title{
  margin: 30rpx 0 0;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.behave-floor{
  position: relative;
  height: 90rpx;
  margin: 30rpx 0 0;
}
.hor-line{
  position: absolute;
  width: 100%;
  height: 1px;
  top: 45rpx;
  background: #f2f2f2;
}
.icon{
  position: absolute;
  right: 0;
  width: 90rpx;
  height: 90rpx;
}
.share{
  opacity: 0;
}
.collect{
  right: 120rpx;
}
.content{
  padding: 20rpx 0;
  letter-spacing: 1.5px;
  line-height: 2;
  font-size: 26rpx;
}