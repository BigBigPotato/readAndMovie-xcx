/* pages/index/index.wxss */
swiper{
  height: 600rpx;
}
.swiper-img{
  width: 100%;
  height: 600rpx;
}
.news-list{
  padding: 0 0 30rpx;
  border-bottom: 1px solid #f2f2f2;
}
.news-list:last-child{
  border: none;
}
.author-info{
  display: flex;
  align-items: center;
  padding: 10rpx;
  font-size: 22rpx;
}
.avatar{
  width: 74rpx;
  height: 74rpx;
  margin: 0 20rpx 0 0;
}
.author-name{
  margin: 0 0 14rpx;
  color: #333;
  font-size: 26rpx;
}
.title{
  padding: 10rpx 10rpx 20rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.head-img{
  width: 100%;
  height: 340rpx;
}
.content{
  padding: 20rpx 10rpx 10rpx;
  line-height: 1.5;
  letter-spacing: 2rpx;
  font-size: 24rpx;
}
.other-info{
  display: flex;
  align-items: center;
  font-size: 22rpx;
}
.other-item{
  display: flex;
  align-items: center;
  margin: 10rpx 20rpx;
}
.icon{
  width: 32rpx;
  height: 32rpx;
  margin: 0 10rpx 0 0;
}