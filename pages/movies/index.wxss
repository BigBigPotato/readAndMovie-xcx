/* pages/movies/index.wxss */
page{
  background: #f2f2f2;
}
.container-box{
  padding: 10rpx 0;
  background: #fff;
}
.search-container{
  display: flex;
  align-items: center;
  margin: 10rpx;
  padding: 0 0 0 20rpx;
  background: #f2f2f2;
  border-radius: 6rpx;
}
.search-input{
  flex: 1;
  margin: 0 20rpx;
  padding: 6rpx 0;
  font-size: 24rpx;
}
.list-floor{
  margin: 20rpx 0 0;
  padding: 20rpx;
  background: #fff;
  font-size: 24rpx;
}
.list-title{
  display: flex;
}
.more{
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #405f80;
}
.more-icon{
  width: 9rpx;
  height: 16rpx;
  margin: 0 0 0 10rpx;
}
.movie-list{
  display: flex;
  margin: 30rpx 0 0;
  justify-content: space-between;
}
.poster{
  width: 200rpx;
  height: 270rpx;
}
.movie-name,
.movie-star{
  margin: 16rpx 0 0;
}
.movie-name{
  max-width: 200rpx;
}
.movie-star{
  display: flex;
}
.star-container{
  margin: 0 20rpx 0 0;
}
.star{
  width: 17rpx;
  height: 17rpx;
}
