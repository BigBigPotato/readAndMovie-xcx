/* pages/movies/detail/index.wxss */
.top-head{
  position: relative;
  height: 320rpx;
  color: #fff;
  font-size: 22rpx;
}
.blur-bg,
.content-container{
  position: absolute;
  width: 100%;
  height: 100%;
}
.blur-bg{
  z-index: 1;
  filter: blur(20px)
}
.content-container{
  z-index: 2;
  padding: 40rpx;
}
.title{
  margin: 0 0 50rpx;
  font-size: 40rpx;
  font-weight: bold;
}
.info-floor{
  display: flex;
  margin: 50rpx 0 0;
  color: #333;
}
.item-container{
  margin: 0 30rpx 0 0;
}
.count{
  margin: 0 14rpx 0 0;
  color: #c13331;
}
.poster{
  position: absolute;
  right: 30rpx;
  bottom: 0;
  z-index: 2;
  width: 175rpx;
  height: 238rpx;
}
.other-msg{
  padding: 40rpx;
  font-size: 22rpx;
  border-bottom: 1px solid #d9d9d9;
}
.other-floor{
  margin: 30rpx 0 0;
}
.other-title{
  margin: 0 16rpx 0 0;
  color: #999;
}
.star-container{
  display: inline-block;
}
.star{
  width: 17rpx;
  height: 17rpx;
}
.summary-container{
  padding: 40rpx;
  font-size: 22rpx;
  color: #999;
  border-bottom: 1px solid #d9d9d9;
}
.summary{
  margin: 20rpx 0 0;
  line-height: 1.8;
  color: #333;
}
.casts-container{
  padding: 40rpx;
  font-size: 22rpx;
}
.avatars{
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0 0;
  text-align: center;
}
.avatar{
  width: 170rpx;
  height: 210rpx;
  margin: 14rpx 0;
  border-radius: 0;
}